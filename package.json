{
  "name": "koa2-typescript-guide",
  "version": "0.2.1",
  "description": "the best practice of building Koa2 with TypeScript",
  "main": "app.ts",
  "scripts": {
    "test": "mocha",
    "lint": "tslint -c tslint.yml -p tsconfig.json",
    "start": "export NODE_ENV=development; nodemon --config nodemon.json",
    "build": "yarn run clean && ncc build app.ts",
    "mongo": "docker-compose -f compose.yml up -d",
    "clean": "rm -rf dist"
  },
  "author": "WittBulter (nanazuimeng123@gmail.com)",
  "bugs": {
    "url": "https://github.com/WittBulter/koa2-typescript-guide/issues"
  },
  "engines": {
    "node": ">= 8.10.0"
  },
  "pre-commit": [
    "lint"
  ],
  "devDependencies": {
    "@haifeng-fe/tslint-config": "^1.0.0",
    "@types/chai": "^4.1.2",
    "@types/chai-http": "^3.0.4",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/mocha": "^2.2.48",
    "@types/node": "^11.10.5",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "mocha": "^5.0.0",
    "ncc": "^0.3.6",
    "nodemon": "^1.18.10",
    "pre-commit": "^1.2.2",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.1.0",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.4.0",
    "mongodb": "^3.1.13",
    "node-env-file": "^0.1.8",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.13"
  }
}
