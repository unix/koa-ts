{
  "name": "koa-ts",
  "version": "2.0.4",
  "description": "the best practice of building Koa2 with TypeScript",
  "license": "MIT",
  "main": "app.ts",
  "scripts": {
    "test": "mocha",
    "lint": "eslint app/**/*.ts configs/**/*.ts app.ts",
    "lint:fix": "eslint app/**/*.ts configs/**/*.ts app.ts --fix",
    "start": "export NODE_ENV=development; nodemon --config nodemon.json",
    "build": "bash ./build.sh",
    "mongo": "docker-compose -f compose.yml up -d",
    "format": "prettier app/**/*.ts configs/**/*.ts app.ts --write"
  },
  "author": "unix (lambdas.dev@gmail.com)",
  "bugs": {
    "url": "https://github.com/unix/koa-ts/issues"
  },
  "engines": {
    "node": ">= 12.16.1"
  },
  "pre-commit": [
    "lint"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-http": "^4.2.0",
    "@types/koa": "^2.11.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.3",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "@zeit/ncc": "^0.22.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-ts-lambdas": "^1.2.0",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "dotenv": "^8.2.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.8",
    "mongodb": "^3.5.5",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1-alpha.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.24"
  }
}
